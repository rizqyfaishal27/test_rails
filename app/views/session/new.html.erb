<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h1>Login</h1>
			<% flash.each do |msg_type, msg| %>
				<p><%= msg %></p>
			<% end %>
			<%= form_with scope: :session, url: '/login' , local: true do |form| %>
				<p>
					<%= form.label :email %>
					<%= form.text_field :email, placeholder: 'Email', class: 'form-control' %>
				</p>
				<p>
					<%= form.label :password %>
					<%= form.password_field :password, placeholder: 'Password', class: 'form-control' %>
				</p>
				<p>
					<%= form.submit "Login" %>
				</p>
			<% end %>
		</div>
	</div>
</div>